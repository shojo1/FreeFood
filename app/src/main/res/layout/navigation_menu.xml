<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:weightSum="1">



        <TextView
            android:id="@+id/textView3"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fontFamily="sans-serif-condensed"
            android:text="SETTINGS"
            android:textSize="45dp" />



    <!-- This just buffers the views -->


    <!-- buffer -->
    <TextView
        android:id="@+id/textView"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif-condensed"
        android:text="Filter by Distance"
        android:textSize="20dp"
        android:layout_weight="0.06" />

    <TextView
        android:id="@+id/textView2"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Search Radius (in miles)" />

    <SeekBar
        android:id="@+id/sbNumMiles"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:max="20"
        android:min="1" />

    <TextView
        android:id="@+id/tvNumMiles"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="1 mile"
        android:layout_weight="0.04" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:id="@+id/textViewType"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif-condensed"
        android:text="Filter by Type"
        android:textSize="20dp"
        android:layout_weight="0.11" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration Required"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campus Event"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happy Hour"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Greek Lyfe"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza"
            android:onClick="onCheckboxClicked"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/bSearch2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_default"
        android:clickable="true"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/bSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:adjustViewBounds="true"
            android:maxHeight="30dp"
            android:maxWidth="30dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/save" />

        <TextView

            android:id="@+id/tvSearchCaption"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="Save"
            android:onClick="SaveClick"/>

    </LinearLayout>

    <!--<Button
        android:id="@+id/bSave"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:background="@mipmap/save"
        android:onClick="SaveClick"
        android:text="Save"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15dp" />-->


</LinearLayout>